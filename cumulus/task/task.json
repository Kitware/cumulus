{
    "definitions": {
        "httpParams": {
            "properties": {
                "url": { "$ref": "#/definitions/url" },
                "method": {
                    "type": "string",
                    "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
                },
                "body": {
                    "type": "object"
                }
            },
            "required": ["url", "method"]
        },
        "statusParams": {
            "properties": {
                "url": { "$ref": "#/definitions/url" },
                "selector": {
                    "type": "string"
                },
                "success": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "failure": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "timeout": {
                    "type": "integer"
                }
            },
            "required": ["url", "selector", "success"]
        },
        "step": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": ["http", "status"]
                },
                "params": {
                    "oneOf": [
                              { "$ref": "#/definitions/httpParams" },
                              { "$ref": "#/definitions/statusParams" }
                              ]
                },
                'log': { "$ref": "#/definitions/url" },
                'terminate': { "$ref": "#/definitions/url" },
                'delete': { "$ref": "#/definitions/url" }
            },
            "required": ["name", "type", "params"]
        },
        "url": {
            "type": "string",
            "pattern": "^/(?:[a-zA-Z]|[0-9]|[$-_@.&+]|[!*\(\),]|(?:%[0-9a-fA-F][0-9a-fA-F]))+$"
        }
    },

    "type": "object",

    "properties": {
        "name": {
            "type": "string"
        },
        "steps": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/step"
            }
        }
    },
    "required": ["name", "steps"]
}