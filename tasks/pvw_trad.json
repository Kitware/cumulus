{
    "name": "Run cluster job",

    "steps": [
              {
                  "name": "Wait for cluster",
                  "type": "status",
                  "timeout": 600,
                  "params": {
                      "url": "/clusters/{{cluster._id}}/status",
                      "selector": "status",
                      "success": ["running"],
                      "failure": ["error"]
                  }
              },
              {
                  "name": "create pvw job",
                  "type": "http",
                  "params": {
                       "url": "/jobs",
                       "method": "POST",
                       "body": {
                          "name": "myjob",
                          "scriptId": "{{defaults.pvw.script.id}}",
                          "output": [{
                            "itemId": "{{output.item.id}}",
                            "path": "."
                          }],
                          "input": [
                            {
                              "itemId": "{{defaults.pvw.proxyItem}}",
                              "path": "config"
                            }
                          ]
                        },
                        "output": "pvw_job"
                  }
              },
              {
                  "name": "submit pvw job",
                  "type": "http",
                  "params": {
                       "url": "/clusters/{{cluster._id}}/job/{{pvw_job._id}}/submit",
                        "method": "PUT",
                        "body": {
                            "numberOfSlots": "{{ cluster.config.numberOfSlots }}",
                            "parallelEnvironment": "{{ cluster.config.parallelEnvironment }}",
                            "jobOutputDir": "{{ cluster.config.jobOutputDir }}"
                            "dataDir": "{{ dataDir }}"
                        }
                  },
                  "log": "/jobs/{{pvw_job._id}}/log",
                  "terminate": "/jobs/{{pvw_job._id}}/terminate",
                  "delete": "/jobs/{{pvw_job._id}}"
              },
              {
                  "name": "Wait for job to be running",
                  "type": "status",
                  "timeout": 300,
                  "params": {
                      "url": "/jobs/{{pvw_job._id}}/status",
                      "selector": "status",

                      "success": ["running"],
                      "failure": ["error", "terminated"]
                  }
              },
              {
                  "name": "create pvserver job",
                  "type": "http",
                  "params": {
                       "url": "/jobs",
                       "method": "POST",
                       "body": {
                          "name": "myjob",
                          "scriptId": "{{defaults.pvserver.script.id}}",
                          "output": [{
                            "itemId": "{{output.item.id}}",
                            "path": "."
                          }]
                        },
                        "output": "pvserver_job"
                  }
              },
              {
                  "name": "submit pvserver job",
                  "type": "http",
                  "params": {
                       "url": "/clusters/{{cluster._id}}/job/{{pvserver_job._id}}/submit",
                      "method": "PUT",
                      "body": {
                            "numberOfSlots": "{{ numberOfSlots }}",
                            "parallelEnvironment": "{{ parallelEnvironment }}",
                            "jobOutputDir": "{{ jobOutputDir }}"
                        }
                  },
                  "log": "/jobs/{{pvserver_job._id}}/log",
                  "terminate": "/jobs/{{pvserver_job._id}}/terminate",
                  "delete": "/jobs/{{pvserver_job._id}}"
              },
              {
                  "name": "Wait for job to be running",
                  "type": "status",
                  "timeout": 300,
                  "params": {
                      "url": "/jobs/{{pvserver_job._id}}/status",
                      "selector": "status",

                      "success": ["running"],
                      "failure": ["error", "terminated"]
                  }
              }
              ]
}
